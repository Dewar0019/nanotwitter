<div class="container">
  <% if login? %>
    <% if current_user?(user) %>
      <%= erb :_tweets_new %>
    <% elsif already_follow?(user) %>
      <form action=<%= "/users/#{user.id}/followers/delete" %> method="post">
        <button id="follow_unfollow" type="submit" class="btn btn-primary">Following</button>
      </form>
    <% else %>
      <form action=<%= request.path_info + "/followers/new" %> method="post">
        <button type="submit" class="btn btn-primary">Follow</button>
      </form>
    <% end %>
  <% end %>

  <br>

  <%= user.user_name %>
  <br>
  Tweets: <%= link_to("#{user.tweets_count}", "/users/#{user.id}") %>
  <br>
  Following: <%= link_to("#{user.followings_count}", "/users/#{user.id}/followings") %>
  <br>
  Followers: <%= link_to("#{user.followers_count}", "/users/#{user.id}/followers") %>
</div>

<br>
