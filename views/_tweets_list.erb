<div class="container">
  <% @tweets.each do |tweet| %>
    <div class="tweet">
      <div class="tweet-header">
        @<%= link_to(tweet.user.user_name, "users/#{tweet.user.id}") %>
        .
        <%= tweet.pretty_print_date %>
      <br>
      </div>
      <div class="tweet-content">
        <%= tweet.text %><br>
        <div class="row">
          <div class="col-md-2">
            <%= tweet.retweets_count %> retweets
          </div>
          <div class="col-md-2">
            <%= tweet.favorites_count %> favorites
          </div>
        </div>
      </div>
    </div>
    <br>
  <% end %>
</div>
